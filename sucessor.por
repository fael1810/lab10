programa {

  funcao inicio() 
   {

      inteiro numero, sucessor, antecessor

      escreva("Digite um numero inteiro : ")

      leia(numero)

      escreva("\nO numero é igual a ", numero)

      antecessor = numero - 1

      escreva("\nO antecessor é igual a ", antecessor)

      sucessor = numero + 1

      escreva("\nO sucessor é igual a ", sucessor)

      escreva("\n\n")
  }
}