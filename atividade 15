if operaçao == 1 :
    resultado=numero1+numero2
    print(resultado)

elif operaçao == 2 :
    resultado=numero1-numero2
    print(resultado)

elif operaçao == 3 :
    resultado=numero1/numero2
    print(resultado)

elif operaçao == 4 :
    resultado=(numero1*numero2)
    print(resultado)

